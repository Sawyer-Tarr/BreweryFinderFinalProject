@model List<Root>

<head>
    <style type="text/css">
        .grid-container {
            width: auto;
            height: auto; 
            background-color: white;
            flex-direction: row;
            display: grid;
            justify-content: space-evenly;
            gap: 15px;
            padding-bottom:80px;
        }
        .flex-box {
            flex: 33.33%; 
            text-align: center;
            line-height: 200px; 
            border-radius: 10px;
            margin: 5px; 
            background-color: goldenrod;
            padding: 10px;
        }
        .text-name {
            font-size: 25px;
            text-align:center;
            justify-content: center;
        }
        .text-center {
            font-size: 15px;
            text-align: center;
            justify-content: center;
        }
    </style>
</head>

<body>
    <div class="grid-container">
        @foreach (var item in Model)
        {
            <div class="flex-box">
                <h1 class="text-name" style="color: black">@item.name</h1>
                <h2 class="text-center">City: @item.city</h2>
                <h2 class="text-center">Street: @item.street</h2>
                <h2 class="text-center">Website: <a href="@item.website_url">@item.website_url</a></h2>
            </div>
        }
    </div>
    <style>
        body {
            background-color: wheat;
        }
    </style>
</body>

