@{
    ViewData["Title"] = "Home Page";
}

@model Root

<link rel="stylesheet" type="text/css" href="~/css/site.css" />

<head class="main">

    <style>
        body, html {
            height: 100%;
        }
        body {
            background-image: url(./img/beer-background.jpg);
            background-repeat: no-repeat;
            background-size: cover;
            height: 100%;
            padding-top: 60px;
            padding-bottom: 40px;
        }
